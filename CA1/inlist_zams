&star_job
  ! see star/defaults/star_job.defaults

  ! begin with a pre-main sequence model
    create_pre_main_sequence_model = .true.

  ! display on-screen plots
    pgstar_flag = .true.


  ! control the output
    history_columns_file = 'history_columns.list'
    profile_columns_file = 'profile_columns.list'

  ! save a model at the end of the run
    save_model_when_terminate = .true.
    save_model_filename = 'zams_last'
   
    write_profile_when_terminate=.true.
    filename_for_profile_when_terminate='profile_last.data'

/ ! end of star_job namelist


&eos
  ! eos options
  ! see eos/defaults/eos.defaults

/ ! end of eos namelist


&kap
  ! kap options
  ! see kap/defaults/kap.defaults
  use_Type2_opacities = .true.
  Zbase = 0.02

/ ! end of kap namelist


&controls
  ! see star/defaults/controls.defaults

  ! starting specifications: YOU ARE TO EDIT HERE
      initial_mass =1d0 ! in Msun units
      initial_Z = 0.02d0 ! solar metalicity

  ! when to stop

    ! stop when the star nears ZAMS (Lnuc/L > 0.99)
    Lnuc_div_L_zams_limit = 0.99d0
    stop_near_zams = .true.

  ! wind

  ! atmosphere

  ! rotation

  ! element diffusion

  ! mlt

  ! mixing

  ! timesteps

  ! mesh

  ! solver
     ! options for energy conservation (see MESA V, Section 3)
     energy_eqn_option = 'dedt'
     use_gold_tolerances = .true.

  ! output

  !if needed,  make output more frequent and make sure that last one is saved
    history_interval = 5
    profile_interval = 10


/ ! end of controls namelist
